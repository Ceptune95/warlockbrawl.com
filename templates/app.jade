block config
  -
    var app = {
      name: 'Warlock Brawl',
      title: 'Warlock Brawl',
      description: 'The official website for the Dota 2 and Warcraft 3 mod, Warlock, and the upcoming standalone. Discuss updates on our forums, play in tournaments, and more!',
      bodyAttrs: {}
    };

doctype html
html(lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1")
      meta(name="description", content= app.description)
      title= app.title
      block styles
        link(rel="stylesheet", href="/assets/css/app.css")
      block scripts
        script(src="/assets/js/app.js")
  body&attributes(app.bodyAttrs)
    div#app.app
      block app
        nav.navbar.navbar-fixed-top.navbar-dark.bg-inverse
          block navigation
            button.navbar-toggler.hidden-sm-up(type="button", data-toggle="collapse", data-target="#navbar") &#9776;
            div.collapse.navbar-toggleable-xs#navbar
              ul.nav.navbar-nav
                block navigation-links
                  li.nav-item(class=(app.activeNav==='/'?'active':''))
                    a.nav-link(href="/")= app.name
                  li.nav-item(class=(app.activeNav==='/download'?'active':''))
                    a.nav-link(href="/download") Download
                  li.nav-item(class=(app.activeNav==='/faq'     ?'active':''))
                    a.nav-link(href="/faq") FAQ
                  li.nav-item(class=(app.activeNav==='/forums'  ?'active':''))
                    a.nav-link(href="/forums") Forum

        main#content.app-content
          block content

        footer#footer.app-footer
          block footer
            div.container
              hr
              p &copy; 2008-2016 #{app.name}
