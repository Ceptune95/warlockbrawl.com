block config
  -
    var app = {
      name: 'Warlock Brawl',
      title: 'Warlock Brawl',
      description: 'The official website for the Dota 2 and Warcraft 3 mod, Warlock, and the upcoming standalone. Discuss updates on our forums, play in tournaments, and more!',
      bodyAttrs: {}
    };

doctype html
html(lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1")
      meta(name="description", content= app.description)
      title= app.title
      block styles
        link(rel="stylesheet", href="/assets/css/app.css")
      block scripts
        script(src="/assets/js/app.js")
  body&attributes(app.bodyAttrs)
    div#app.app
      block app
        header.navbar.navbar-light.navbar-static-top.app-navbar
          block header
            div.clearfix
              button.navbar-toggler.pull-xs-right.hidden-sm-up(type="button", data-toggle="collapse", data-target="#main-nav") &#9776;
              a.navbar-brand.hidden-sm-up(href="/")= app.name
            div#main-nav.collapse.navbar-toggleable-xs
              nav.navbar.navbar-nav
                block navigation-links
                  a.nav-item.nav-link(class=(app.activeNav==='/'?'active':''), href="/")= app.name
                  a.nav-item.nav-link(class=(app.activeNav==='/download'?'active':''), href="/download") Download
                  a.nav-item.nav-link(class=(app.activeNav==='/faq'     ?'active':''), href="/faq") FAQ
                  a.nav-item.nav-link(class=(app.activeNav==='/forums'  ?'active':''), href="/forums") Forum

        main#content.app-content
          block content

        footer#footer.app-footer
          block footer
            div.container
              hr
              p &copy; 2008-2016 #{app.name}
