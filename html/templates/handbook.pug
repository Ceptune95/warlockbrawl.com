extends ./layout

block append config
  -
    const handbook = {
      breadcrumbs: [
        {
          url: '',
          title: 'Index',
        }
      ],
      pageheader: 'Handbook'
    };

    app.title = 'Handbook - ' + app.title;

  block handbook-config

  -
    app.borderedNav = !handbook.pageheader;

block content
  if handbook.pageheader
    .app-pageheader
      .container
        h1= handbook.pageheader

  .container
    if handbook.breadcrumbs
      ol.breadcrumb(class= !handbook.pageheader ? 'mt-2' : '')
        - const activeCrumb = handbook.breadcrumbs.pop();
        each breadcrumb in handbook.breadcrumbs
          li.breadcrumb-item #[a(href= breadcrumb.url)= breadcrumb.title]
        li.breadcrumb-item.active= activeCrumb.title

    block handbook-content

    if handbook.editLink
      .mt-5.text-right
        -
          const url = handbook.editLink.startsWith('https://') || handbook.editLink.startsWith('http://')
            ? handbook.editLink
            : `${app.links.github}/warlockbrawl.com/edit/master/${handbook.editLink}`

        a(href=url, target="_blank") Edit this article
          span.text-muted.ml-1
            +icon('externalLinkAlt')
